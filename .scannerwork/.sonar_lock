# Required metadata
sonar.projectKey=your-github-username_your-repo-name
sonar.organization=your-sonarcloud-username

# Focus on Dart code only
sonar.sources=lib
sonar.tests=test
sonar.language=dart  # âœ… Explicitly specify Dart

# Exclude all native files and generated code
sonar.exclusions=**/*.g.dart,**/*.freezed.dart,ios/**,android/**,build/**,**/*.m,**/*.mm,**/*.h,**/*.c,**/*.cpp

# Disable C/C++/Objective-C plugins
sonar.c.file.suffixes=-
sonar.cpp.file.suffixes=-
sonar.objc.file.suffixes=-

# Encoding
sonar.sourceEncoding=UTF-8